# Set your environment variables
$env:JIRA_URL = "https://your-jira-instance.com"
$env:JIRA_USERNAME = "your_username"
$env:JIRA_API_TOKEN = "your_api_token"


from jira import JIRA

# Replace these variables with your Jira instance details
JIRA_SERVER = 'https://your-jira-instance.com'
USERNAME = 'your_username'
PASSWORD = 'your_password'
PROJECT_KEY = 'your_project_key'
ISSUE_KEY = 'your_issue_key'

# Create a Jira client instance with basic authentication
jira = JIRA(server=JIRA_SERVER, basic_auth=(USERNAME, PASSWORD))

# Get the issue
issue = jira.issue(ISSUE_KEY)

# Print some information about the issue
print(f"Summary: {issue.fields.summary}")
print(f"Description: {issue.fields.description}")
print(f"Status: {issue.fields.status}")
